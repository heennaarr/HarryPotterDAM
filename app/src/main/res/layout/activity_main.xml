<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageCharacter1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars"
        >

    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hola"
        android:id="@+id/nameCharacter1"
        app:layout_constraintLeft_toRightOf="@id/imageCharacter1"
        app:layout_constraintTop_toTopOf="parent"

       />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageCharacter2"
        app:layout_constraintTop_toBottomOf="@id/imageCharacter1"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hola2"
        android:id="@+id/nameCharacter2"
        app:layout_constraintLeft_toRightOf="@id/imageCharacter2"
        app:layout_constraintTop_toBottomOf="@id/imageCharacter1"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageCharacter3"
        app:layout_constraintTop_toBottomOf="@id/imageCharacter2"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameCharacter3"
        android:text="hola3"
        app:layout_constraintLeft_toRightOf="@id/imageCharacter3"
        app:layout_constraintTop_toBottomOf="@id/imageCharacter2"
         />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageCharacter4"
        app:layout_constraintTop_toBottomOf="@id/imageCharacter3"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameCharacter4"
        android:text="hola4"
        app:layout_constraintLeft_toRightOf="@id/imageCharacter4"
        app:layout_constraintTop_toBottomOf="@id/imageCharacter3"
     />

</androidx.constraintlayout.widget.ConstraintLayout>